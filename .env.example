# ------------------------------------------------------------------
# OVii Backend Environment Variables (Production)
# ------------------------------------------------------------------
# Copy this file to .env on your production server and fill in the values.
# Do NOT commit the .env file to version control.

# ---------------------------------
# CORE DJANGO SETTINGS
# ---------------------------------
# Set to False for production for security and performance.
DJANGO_DEBUG=False

# Generate a new, strong secret key for production.
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-super-secret-and-long-random-string-goes-here

# Comma-separated list of your backend's domain names, based on your nginx.conf.
ALLOWED_HOSTS=admin.ovii.it.com,api.ovii.it.com

# ---------------------------------
# CORS & CSRF SETTINGS
# ---------------------------------
# Comma-separated list of your frontend's production URL(s).
# Must include the scheme (https://).
CORS_ALLOWED_ORIGINS=https://ovii.it.com
CSRF_TRUSTED_ORIGINS=https://ovii.it.com

# ---------------------------------
# DATABASE SETTINGS (PostgreSQL Example)
# ---------------------------------
# Use 'django.db.backends.postgresql' for PostgreSQL in production.
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=ovii_prod_db
DATABASE_USER=ovii_prod_user
DATABASE_PASSWORD=a_very_strong_and_secret_password
# This should be the hostname or IP of your database server.
DATABASE_HOST=db
DATABASE_PORT=5432

# ---------------------------------
# REDIS / CHANNELS / CELERY SETTINGS
# ---------------------------------
# This should be the hostname or IP of your Redis server.
REDIS_HOST=redis

